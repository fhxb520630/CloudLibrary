<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
	<com.github.library.bubbleview.BubbleTextView
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:background="@drawable/comment_color"
		android:gravity="center"
		android:textColor="@android:color/white"
		app:arrowWidth="0dp"
		app:angle="0dp"
		app:arrowHeight="0dp"
		app:arrowPosition="0dp"
		app:arrowLocation="right"
		app:bubbleColor="#00E3DB4E"
		android:text="图书馆云参观系统"
		android:layout_marginTop="30dp"
		android:textSize="40sp"/>


	<TextView
		style="@style/line"/>

	<LinearLayout
		android:layout_marginTop="20dp"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:layout_width="match_parent"
		android:layout_height="420dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="200dp"
			style="@style/BoxStyle">

			<Button
				android:id="@+id/fragment_home_base_select0"
				android:layout_width="match_parent"
				android:layout_marginTop="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginBottom="1dp"
				android:layout_marginLeft="1dp"
				android:layout_height="match_parent"
				android:background="@drawable/library1"/>

		</LinearLayout>

		<LinearLayout
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			style="@style/BoxStyle">

			<Button
				android:id="@+id/fragment_home_base_select1"
				android:layout_width="match_parent"
				android:layout_marginTop="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginBottom="1dp"
				android:layout_marginLeft="1dp"
				android:layout_height="match_parent"
				android:background="@drawable/library2"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
